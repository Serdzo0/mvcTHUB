@model List<TournamentModel>

<div class"containter">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">
				TEAM LIST
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Tournament" asp-action="Create" class="btn btn-dark"> <i class="bi bi-plus-square"></i> Create new tournament</a>
		</div>
	</div>

	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>
					Tournament Name
				</th>
				<th>
					Sport
				</th>
				<th>
					Starting date
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var o in Model)
			{
				<tr>
					<td>
						@o.Name
					</td>
					<td>
						@o.Sport
					</td>
					<td>
						@o.StartDate
					</td>
					
					<td>
						<div class="w-75 btn-group" role="group">
							@if(o.teams == null)
							{
								<a asp-controller="Tournament" asp-action="Edit" asp-route-id="@o.TournamentId" class="btn btn-dark mx-2">
									<i class="bi bi-pencil-square"></i> Edit
								</a>
								<a asp-controller="Tournament" asp-action="AddTeams" asp-route-id="@o.TournamentId" class="btn btn-danger mx-2">
									<i class="bi bi-trash"></i> Add Teams
								</a>
							}
							else
							{
								<a asp-controller="Tournament" asp-action="EditTeams" asp-route-id="@o.TournamentId" class="btn btn-dark mx-2">
									<i class="bi bi-pencil-square"></i> Edit teams
								</a>
							}
							<a asp-controller="Tournament" asp-action="Delete" asp-route-id="@o.TournamentId" class="btn btn-danger mx-2">
								<i class="bi bi-trash"></i> Delete
							</a>
							
							<a asp-controller="Tournament" asp-action="Info" asp-route-id="@o.TournamentId" class="btn btn-danger mx-2">
								<i class="bi bi-trash"></i> Info
							</a>
							<div class="col-2">
								<a asp-controller="Tournament" asp-action="Index" class="btn btn-secondary border ">Create a bracket</a>
							</div>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>

</div>