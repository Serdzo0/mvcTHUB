@model List<UserModel>

<div class"containter">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">
				USER LIST
			</h2>
		</div>
		<div class="col-6 text-end" >
			<a asp-controller="User" asp-action="Create" class="btn btn-dark"> <i class="bi bi-plus-square"></i> Create new user</a>
		</div>
	</div>

	<table class="table table-bordered table-striped">
		<thead>
		 <tr>
			 <th>
				 Name
			 </th>
			 <th>
				 Last Name
			 </th>
			 <th>
				 Email
			 </th>
		 </tr>
		</thead>
		<tbody>
			@foreach(var o in Model)
			{
				<tr>
					<td>
						@o.Name
					</td>
					<td>
						@o.LastName
					</td>
					<td>
						@o.Email
					</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-controller="User" asp-action="Edit" asp-route-id="@o.UserId" class="btn btn-dark mx-2">
								<i class="bi bi-pencil-square"></i> Edit
							</a>
							<a asp-controller="User" asp-action="Delete" asp-route-id="@o.UserId" class="btn btn-danger mx-2">
								<i class="bi bi-trash"></i> Delete
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>

</div>